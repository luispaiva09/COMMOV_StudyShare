<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayoutEditarPerfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Conteúdo principal da activity -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header -->
        <include
            android:id="@+id/headerLayoutEditarPerfil"
            layout="@layout/header" />

        <!-- Conteúdo restante -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="Editar Perfil"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp" />

                <EditText
                    android:id="@+id/editTextEditarNome"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:hint="Nome" />

                <EditText
                    android:id="@+id/editTextEditarUsername"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:hint="Username"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/editTextEditarEmail"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:hint="Email"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/editTextEditarTelefone"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:hint="Telefone"
                    android:inputType="phone"
                    android:layout_marginTop="12dp" />

                <Button
                    android:id="@+id/buttonGuardarPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guardar Alterações"
                    android:layout_marginTop="24dp"
                    android:padding="12dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Navigation drawer, se tiver -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationViewEditarPerfil"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
