<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayoutPerfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Conteúdo Principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Cabeçalho -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFD600"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/logo"
                android:contentDescription="Logo" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/buttonPerfil"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@drawable/perfil"
                android:contentDescription="Perfil" />

            <ImageButton
                android:id="@+id/buttonMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@drawable/sidebar"
                android:contentDescription="Menu" />
        </LinearLayout>

        <!-- Conteúdo Scrollável -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Ícone de Perfil -->
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/perfil"
                    android:contentDescription="User Icon"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/textViewNomePerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" />

                <!-- Informação Pessoal -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informação Pessoal"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp" />

                <!-- Detalhes da Conta -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detalhes da Conta"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Número de Utilizador"
                    android:enabled="false"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome de Utilizador"
                    android:enabled="false"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome Real"
                    android:enabled="false"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Número de Telefone"
                    android:enabled="false"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:enabled="false"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Data de Nascimento"
                    android:enabled="false"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/buttonEditarPerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar Perfil"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp" />

                <!-- Login Info -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Palavra-passe"
                    android:enabled="false"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/buttonAlterarPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alterar Palavra-passe"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="32dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Menu Lateral Direito -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationViewPerfil"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@android:color/white"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
