<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayoutAlterarPassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Conteúdo principal -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Include do header -->
        <include
            android:id="@+id/headerLayoutAlterarPassword"
            layout="@layout/header" />

        <!-- Conteúdo rolável -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="32dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Alterar Palavra-passe"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp" />

                <EditText
                    android:id="@+id/editTextPasswordAtual"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:hint="Password Atual"
                    android:inputType="textPassword" />

                <EditText
                    android:id="@+id/editTextNovaPassword"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:hint="Nova Password"
                    android:inputType="textPassword"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/editTextConfirmarPassword"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:hint="Confirmar Nova Password"
                    android:inputType="textPassword"
                    android:layout_marginTop="12dp" />

                <Button
                    android:id="@+id/buttonGuardarPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guardar"
                    android:layout_marginTop="24dp"
                    android:padding="12dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Navigation drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationViewAlterarPassword"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
